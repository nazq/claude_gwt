{
  "name": "claude-gwt",
  "version": "0.3.0",
  "description": "[BETA] A beautiful Git Worktree manager with integrated Claude Code orchestration - Experimental software under active development",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-gwt": "./dist/src/cli/index.js",
    "cgwt": "./dist/src/cli/cgwt.js"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "pack:local": "npm run build:clean && npm pack",
    "dev": "tsx watch src/cli/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integ": "vitest run tests/integ",
    "test:ci": "npm run test:coverage",
    "test:ci:unit": "npm run test:unit",
    "test:ci:integ": "npm run test:integ",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "fmt": "npm run format",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "postbuild": "chmod +x dist/src/cli/index.js dist/src/cli/cgwt.js",
    "prepare:publish": "node scripts/prepare-publish.js",
    "prepublishOnly": "npm run build:clean && npm test",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm install --package-lock-only",
    "changeset:publish": "npm run build:clean && changeset publish",
    "release:prod": "./scripts/release-prod.sh"
  },
  "keywords": [
    "git",
    "worktree",
    "claude",
    "ai",
    "orchestration",
    "tmux",
    "developer-tools",
    "cli",
    "beta",
    "experimental"
  ],
  "author": "Claude GWT Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nazq/claude_gwt.git"
  },
  "bugs": {
    "url": "https://github.com/nazq/claude_gwt/issues"
  },
  "homepage": "https://github.com/nazq/claude_gwt#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CLAUDE.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.7.0",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.30.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/typescript-checker": "^9.0.1",
    "@stryker-mutator/vitest-runner": "^9.0.1",
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^2.0.0",
    "audit-ci": "^7.1.0",
    "danger": "^13.0.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "pino-test": "^1.1.0",
    "prettier": "^3.2.4",
    "size-limit": "^11.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "tests/**/*.ts": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "dist/src/cli/index.js",
      "limit": "500 KB"
    }
  ]
}
