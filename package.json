{
  "name": "claude-gwt",
  "version": "1.0.0",
  "description": "A beautiful Git Worktree manager with integrated Claude Code orchestration",
  "main": "dist/index.js",
  "bin": {
    "claude-gwt": "./dist/src/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "pack:local": "npm run build:clean && npm pack",
    "dev": "tsx watch src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "postbuild": "chmod +x dist/src/cli/index.js"
  },
  "keywords": ["git", "worktree", "claude", "ai", "orchestration"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "simple-git": "^3.22.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.15",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "blessed": "^0.1.81",
    "figlet": "^1.7.0",
    "boxen": "^7.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/jest": "^29.5.11",
    "@types/inquirer": "^9.0.7",
    "@types/blessed": "^0.1.25",
    "@types/figlet": "^1.5.8",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "prettier": "^3.2.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}