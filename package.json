{
  "name": "claude-gwt",
  "version": "1.0.0",
  "description": "A beautiful Git Worktree manager with integrated Claude Code orchestration",
  "main": "dist/index.js",
  "bin": {
    "claude-gwt": "./dist/src/cli/index.js",
    "claude-gwt-mcp": "./dist/src/mcp/server.js",
    "cgwt": "./dist/src/cli/cgwt.js",
    "cgwt-tokens": "./dist/src/cli/token-report.js"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "pack:local": "npm run build:clean && npm pack",
    "dev": "tsx watch src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:unit": "jest tests/unit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "fmt": "npm run format",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "postbuild": "chmod +x dist/src/cli/index.js && chmod +x dist/src/mcp/server.js && chmod +x dist/src/cli/cgwt.js && chmod +x dist/src/cli/token-report.js",
    "prepublishOnly": "npm run build:clean && npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "git",
    "worktree",
    "claude",
    "ai",
    "orchestration",
    "tmux",
    "mcp",
    "model-context-protocol",
    "developer-tools",
    "cli"
  ],
  "author": "Claude GWT Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/claude-gwt.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/claude-gwt/issues"
  },
  "homepage": "https://github.com/yourusername/claude-gwt#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.7.0",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "audit-ci": "^7.1.0",
    "danger": "^13.0.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "size-limit": "^11.2.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "size-limit": [
    {
      "path": "dist/src/cli/index.js",
      "limit": "500 KB"
    },
    {
      "path": "dist/src/mcp/server.js",
      "limit": "200 KB"
    }
  ]
}
